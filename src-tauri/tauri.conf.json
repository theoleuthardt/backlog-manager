{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Backlog Manager",
  "version": "0.1.0",
  "identifier": "com.backlogmanager",
  "build": {
    "frontendDist": "../public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Backlog Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/server"
    ],
    "publisher": "Backlog Manager",
    "license": "",
    "category": "Productivity",
    "shortDescription": "Manage your gaming backlog",
    "longDescription": "A desktop application to manage and track your gaming backlog across multiple platforms"
  }
}
